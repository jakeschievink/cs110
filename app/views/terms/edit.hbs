{{!< ../layouts/default}}

<div class="page-header">
	<h1>New Term</h1>
</div>

<form method="post" action="/terms/{{term.id}}">
	<input type="hidden" name="_method" value="put" />
	<div class="form-group">
		<label for="name">Name</label>
		<input type="text" name="name" id="name" class="form-control" value="{{term.name}}" disabled/>
	</div>
	<div class="form-group">
		<label for="description">Description</label>
		<textarea class="form-control" name="description" data-provide="markdown" id="description">{{term.description}}</textarea>
		<p class="help-block">This editor uses <a href="http://daringfireball.net/projects/markdown/" target="_blank">Markdown</a>. <a href="http://www.youtube.com/watch?v=6A5EpqqDOdk" target="_blank">Here</a>'s a video tutorial.</p>
	</div>
	<div>
    	<input type="hidden" name="tags" id="tags" value="{{#if term.tags.length}}{{#each term.tags}}{{#if @index}},{{/if}}{{name}}{{/each}}{{/if}}"/>
    </div>
     <br/>
    <div>
    	<button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>

<script src="/tags.js"></script>